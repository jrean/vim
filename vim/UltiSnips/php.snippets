	${2}
}
${0}
endsnippet

snippet ife "New if else statement" !b
if (${1}) {
	${2}
}
else {
	${3}
}
${0}
endsnippet

snippet for "New for statement" !b
for ($${1:i} = ${2:0}; $$1 ${3:<} ${4:count}; $$1${5:++}) {
	${6}
}
${0}
endsnippet

snippet fore "New foreach statement" !b
foreach ($${1:variable} as $${2:value}) {
	${3}
}
${0}
endsnippet

snippet forek "New foreach with key statement" !b
foreach ($${1:variable} as $${2:key} => $${3:value}) {
	${4}
}
${0}
endsnippet
